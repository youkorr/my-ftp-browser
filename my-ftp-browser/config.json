{
  "name": "My FTP Browser",
  "version": "1.0.0",
  "slug": "my_ftp_browser",
  "description": "Web interface for FTP file management with sharing capabilities",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "ports": {
    "80/tcp": 8080
  },
  "ports_description": {
    "80/tcp": "Web interface"
  },
  "options": {
    "ftp_host": "localhost",
    "ftp_port": 21,
    "ftp_user": "user",
    "ftp_pass": "pass",
    "base_path": "/"
  },
  "schema": {
    "ftp_host": "str",
    "ftp_port": "int",
    "ftp_user": "str",
    "ftp_pass": "str",
    "base_path": "str"
  },
  "image": "ghcr.io/home-assistant/{arch}-addon-my-ftp-browser"
}

