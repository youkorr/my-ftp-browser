{
  "name": "FTP Browser",
  "version": "0.1.0",
  "slug": "ftp_browser",
  "description": "FTP Browser provides a file managing interface to access FTP servers, with features to browse, download, upload and share files",
  "url": "https://github.com/yourusername/hassio-addons",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "panel_icon": "mdi:file-network",
  "map": [
    "media:rw",
    "share:rw"
  ],
  "ingress": true,
  "ingress_port": 8099,
  "ports": {
    "8099/tcp": null
  },
  "ports_description": {
    "8099/tcp": "Web interface (Not required for ingress)"
  },
  "options": {
    "ftp_servers": [
      {
        "name": "My FTP Server",
        "host": "192.168.1.123",
        "port": 21,
        "username": "user",
        "password": "pass",
        "root_path": "/sdcard"
      }
    ],
    "allow_uploads": true
  },
  "schema": {
    "ftp_servers": [
      {
        "name": "str",
        "host": "str",
        "port": "int(1,65535)",
        "username": "str",
        "password": "password",
        "root_path": "str?"
      }
    ],
    "allow_uploads": "bool"
  }
}
